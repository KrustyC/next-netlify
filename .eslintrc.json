{
  "extends": "next/core-web-vitals",
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@/components", "./components"],
          ["@/hooks/*", "hooks/*"],
          ["@/contexts/*", "contexts/*"],
          ["@/types/*", "types/*"],
          ["@/utils/*", "utils/*"]
        ],
        "extensions": [".ts", ".js", ".jsx", ".json"]
      }
    }
  }
}
